<p id="notice"><%= notice %></p>

<center><div class="category-title"> <%= link_to 'Post to Investors', new_investor_path %></div></center></br>

  <tbody>
    <% @investors.reverse.each do |investor| %>
      <tr>
       <td>
         <% if investor.created_at < 0.days.ago  %>
         <div class="time-new"><%= "Today" %> </div>
         <% else %>
         <div class="time">Last updated <%= time_ago_in_words(investor.created_at) %> ago </div>
         <% end %>
       </td>
        <td><%= link_to investor_path(investor) do %> 
        <div class="post-title"><%= investor.title %></div></br>
        <% end %> </td>
      </tr>
    <% end %>
  </tbody>
  <%= link_to 'Back', root_url %>