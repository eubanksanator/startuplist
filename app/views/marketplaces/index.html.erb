<p id="notice"><%= notice %></p>

<center><div class="category-title"> <%= link_to 'Post to Marketplace', new_marketplace_path %></div></center></br>

  <tbody>
    <% @marketplaces.reverse.each do |marketplace| %>
      <tr>
       <td>
         <% if marketplace.created_at < 1.days.ago  %>
         <div class="time-new"><%= "Today" %> </div>
         <% else %>
         <div class="time">Last updated <%= time_ago_in_words(marketplace.created_at) %> ago </div>
         <% end %>
       </td>
        <td><%= link_to marketplace_path(marketplace) do %> 
        <div class="post-title"><%= marketplace.title %> - <%= marketplace.location %></div></br>
        <% end %> </td>
      </tr>
    <% end %>
  </tbody>
  <%= link_to 'Back', root_url %>