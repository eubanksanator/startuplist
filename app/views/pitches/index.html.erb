<p id="notice"><%= notice %></p>

<center><div class="category-title"> <%= link_to 'Post Your Pitch', new_pitch_path %></div></center></br>

  <tbody>
    <% @pitches.reverse.each do |pitch| %>
      <tr>
       <td><div class="time">Last updated <%= time_ago_in_words(pitch.created_at) %> ago </div></td>
        <td><%= link_to pitch_path(pitch) do %> 
        <div class="post-title"><%= pitch.title %></div></br>
        <% end %> </td>
      </tr>
    <% end %>
  </tbody>